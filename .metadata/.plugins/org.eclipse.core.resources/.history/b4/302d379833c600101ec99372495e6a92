import java.util.Scanner;

public class MainProduct
{
  public static void main(String[] args) 
  {	
	DaoProduct dao = new DaoProduct();
	Scanner sc = new Scanner(System.in);
	do {
		System.out.println("\nENTER YOUR CHOICE\n");
		System.out.println("1=>Press Add Product");
		System.out.println("2=>Press Show Details");
		System.out.println("3=>Press Clear Card");
		System.out.println("4=>Press Exit\n ");
		 int key = sc.nextInt();
		 sc.nextLine();
		switch (key) 
		{
		case 1: 
		{
		  Product product = new Product();
		  dao.addProduct(product);
		  System.out.println("Enter the Product Name :");
		  product.setName(sc.nextLine());
		  System.out.println("Enter the Product brand :");
		  product.setBrand(sc.nextLine());
		  System.out.println("Enter the Product Price :");
		  product.setPrice(sc.nextInt());
			break;
		}
		case 2: 
		{
		  dao.showDetails();
			break;
		}
		case 3: 
		{
		  dao.clearDetails();
			break;
		}
		case 4: 
		{
			System.out.println("YOU HAVE EXIT SUCCESFULLY....\n");
		  return;
		}
		default:
			System.err.println("Please Enter the valid Number...\n\n");
		}
	}while(true);
	
	
  }
}
